{
  "AllowedHosts": "*",
  "Sentry": {
    "Dsn": "https://0693f15f45f4481aae602816728c8ea9@sentry.io/1266316",
    "AttachStackTrace": true, // Send stack trace of log messages (without exception)
    "Debug": true,
    "DiagnosticsLevel": "Info"
  },
  "Hangfire": {
    "WorkerCount": 2
  },
  "DailyDownloadWorker": {
    "WorkerCount": 8
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Sentry": "Verbose"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "Sentry",
        "Args": {
          "MinimumBreadcrumbLevel": "Debug",
          "MinimumEventLevel": "Warning"
        }
      },
      {
        "Name": "LogzIo",
        "Args": {
          "authToken": "Set via env var: Serilog__WriteTo__2__Args__authToken",
          "type": "worker",
          "useHttps": true,
          "boostProperties": true,
          "dataCenterSubDomain": "listener-eu",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ]
  }
}
